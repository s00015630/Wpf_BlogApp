<Window x:Class="Wpf_BlogApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_BlogApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Label x:Name="label" Content="Welcome to the Members App" HorizontalAlignment="Left" Margin="170,34,0,0" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="btnJoin" Content="New Members" HorizontalAlignment="Left" Margin="212,100,0,0" VerticalAlignment="Top" Width="84" Click="NewMemberJoin"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="212,174,0,0" VerticalAlignment="Top" Width="84" Click="BtnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="212,255,0,0" VerticalAlignment="Top" Width="84" Click="ExitMain"/>
    </Grid>
</Window>
