<Window x:Class="Wpf_BlogApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_BlogApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="525">
        
    <Grid>
        <Label x:Name="label" Content="Welcome to this blog" HorizontalAlignment="Left" Margin="192,34,0,0" VerticalAlignment="Top" Width="134"/>
        <Button x:Name="btnJoin" Content="NewMemberJoin" HorizontalAlignment="Left" Margin="221,100,0,0" VerticalAlignment="Top" Width="75" Click="NewMemberJoin"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="221,174,0,0" VerticalAlignment="Top" Width="75" Click="BtnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="221,255,0,0" VerticalAlignment="Top" Width="75" Click="ExitMain"/>
    </Grid>
</Window>
